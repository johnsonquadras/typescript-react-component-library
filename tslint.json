{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-eslint-rules"
  ],
  "linterOptions": {
    "exclude": [
      ".docker",
      ".storybook",
      "build",
      "config",
      "jest",
      "node_modules",
      "public",
      "scripts",
      "**/*.js"
    ]
  },
  "rules": {
    "arrow-parens": false,
    "interface-name" : false,
    "max-line-length": false,
    "no-console": false,
    "no-any": true,
    "no-null-keyword": true
  }
}
