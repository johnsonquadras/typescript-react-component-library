{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-eslint-rules"
  ],
  "linterOptions": {
    "exclude": [
      ".circleci",
      ".storybook",
      "build",
      "coverage",
      "node_modules",
      "public"
    ]
  },
  "rules": {
    "arrow-parens": false,
    "indent": [
      true, 
      "spaces", 
      4
    ],
    "block-spacing": [
      true,
      "always"
    ],
    "interface-name" : false,
    "max-line-length": false,
    "no-console": false,
    "no-any": true,
    "no-null-keyword": true
  }
}
