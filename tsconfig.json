{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5","es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "exclude": [
    ".docker",
    ".storybook",
    "build",
    "config",
    "jest",
    "node_modules",
    "public",
    "scripts",
    "src/**/*.storybook.ts",
    "src/**/*.test.ts",
    "**/*.js"
  ]
}
