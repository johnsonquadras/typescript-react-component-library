{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": [
    "./definitions",
    "./node_modules/@types"
  ],
  "types": [
    "jest"
  ],
  "include": [
    ".storybook",
    "./definitions",
    "./scripts",
    "./src"
  ],
  "exclude": [
    "build",
    "coverage",
    "node_modules",
    "public"
  ]
}
