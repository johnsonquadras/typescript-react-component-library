    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "hypernova": "^2.3.0",
    "hypernova-client": "^1.1.0",
    "hypernova-react": "^2.1.0",
    "immutable": "^3.8.2",
    "jest": "22.4.2",
    "lodash": "^4.17.11",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
