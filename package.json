  "scripts": {
    "build": "run-p build-ts build-story",
    "build-ts": "ts-node --files lib/build.ts",
    "build-story": "build-storybook -c .storybook -o build/public/docs",
    "clean": "rm -rf ./build",
    "deploy": "node build/server.js",
    "lint": "run-p lint-ts lint-scss",
    "lint-fix": "run-p lint-ts-fix lint-scss-fix",
    "lint-ts": "tslint --project .",
    "lint-ts-fix": "tslint --fix --project .",
    "lint-scss": "stylelint src/**/*.scss --syntax scss",
    "lint-scss-fix": "stylelint src/**/*.scss --syntax scss --fix",
    "precommit": "lint-staged",
    "start": "run-p start-ts start-story",
    "start-ts": "ts-node --files lib/start.ts",
    "start-story": "start-storybook --quiet -p 9001 -c .storybook",
    "test": "jest --watch --env=jsdom",
    "test-coverage": "jest --coverage --env=jsdom"
  },
  "lint-staged": {
    "lib/**/*.{ts,tsx}": [
      "yarn lint-ts-fix",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "yarn lint-ts-fix",
      "git add"
    ],
    "*.scss": [
      "yarn lint-scss-fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "ignoreFiles": [
      "./src/client/assets/semantic.scss",
      "./src/client/assets/semantic.css",
      "./src/client/assets/themes/**"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/lib/boostrap/test.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "@client/(.*)$": "<rootDir>/src/client/$1",
      "@server/(.*)$": "<rootDir>/src/server/$1",
      "@shared/(.*)$": "<rootDir>/src/shared/$1",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/lib/mocks/fileMock.js",
      ".+\\.(css|styl|less|sass|scss)$": "<rootDir>/lib/mocks/styleMock.ts"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ]
  }
}
