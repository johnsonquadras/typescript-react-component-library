{
  "name": "semantic-ui-typescript-library",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.10",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "2.17.0",
    "semantic-ui-css": "^2.4.0",
    "semantic-ui-react": "^0.82.5"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@storybook/addon-actions": "^4.0.0-alpha.14",
    "@storybook/addon-knobs": "^4.0.0-alpha.14",
    "@storybook/addon-notes": "^4.0.0-alpha.14",
    "@storybook/addon-options": "^4.0.0-alpha.14",
    "@storybook/addons": "^4.0.0-alpha.14",
    "@storybook/core": "^4.0.0-alpha.14",
    "@storybook/react": "^4.0.0-alpha.14",
    "@types/enzyme": "^3.1.0",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.115",
    "@types/node": "^10.5.4",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/react-router-dom": "^4.3.0",
    "@types/storybook__addon-actions": "^3.0.0",
    "@types/storybook__addon-knobs": "^3.3.0",
    "@types/storybook__addon-notes": "^3.3.0",
    "@types/storybook__addon-options": "^3.2.0",
    "@types/storybook__react": "^3.0.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^8.0.2",
    "babel-runtime": "^6.26.0",
    "emotion": "^9.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "moment": "^2.16.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "storybook-readme": "^4.0.0-beta1",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "webpack": "^4.19.1"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "yarn build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts-ts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "storybook": "yarn build-css && start-storybook -p 9001 -c .storybook",
    "storybook:build": "yarn build-css && build-storybook -c .storybook -o public/docs"
  }
}
