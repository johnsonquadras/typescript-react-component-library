{
  "name": "typescript-react-component-library",
  "version": "0.1.0",
  "description": "TypeScript React component library and demo application",
  "author": "Brian Gebel <me@pixeloven.com>",
  "license": "MIT",
  "homepage": "https://github.com/pixeloven/typescript-react-component-library/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixeloven/typescript-react-component-library.git"
  },
  "keywords": [
    "react",
    "semantic",
    "components",
    "typescript"
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "immutable": "^3.8.2",
    "lodash": "^4.17.11",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "react-scripts-ts": "2.17.0",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "semantic-ui-css": "^2.4.0",
    "semantic-ui-react": "^0.82.5"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@storybook/addon-actions": "^4.0.0-alpha.22",
    "@storybook/addon-knobs": "^4.0.0-alpha.22",
    "@storybook/addon-notes": "^4.0.0-alpha.22",
    "@storybook/addon-options": "^4.0.0-alpha.22",
    "@storybook/addons": "^4.0.0-alpha.22",
    "@storybook/core": "^4.0.0-alpha.22",
    "@storybook/react": "^4.0.0-alpha.22",
    "@types/enzyme": "^3.1.0",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.115",
    "@types/node": "^10.11.0",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "@types/redux-form": "^7.4.8",
    "@types/storybook__addon-actions": "^3.0.0",
    "@types/storybook__addon-knobs": "^3.3.0",
    "@types/storybook__addon-notes": "^3.3.0",
    "@types/storybook__addon-options": "^3.2.0",
    "@types/storybook__react": "^3.0.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^8.0.2",
    "babel-runtime": "^6.26.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "moment": "^2.22.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "storybook-readme": "^4.0.0-beta1",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.3.1",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "webpack": "^4.20.0"
  },
  "devEngines": {
    "node": "8.x || 9.x || 10.x"
  },
  "scripts": {
    "build": "npm-run-all build-scss build-ts",
    "build-scss": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "build-ts": "react-scripts-ts build",
    "build-storybook": "yarn build-scss && build-storybook -c .storybook -o public/docs",
    "clean": "rm -rf ./build",
    "lint": "yarn lint-ts",
    "lint-ts": "tslint src/**/*.{ts,tsx}",
    "lint-scss": "stylelint src/**/*.scss --syntax scss",
    "precommit": "lint-staged",
    "start": "npm-run-all -p start-scss start-ts",
    "start-scss": "yarn build-scss && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "start-storybook": "yarn build-scss && start-storybook -p 9001 -c .storybook",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax scss --fix"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "ignoreFiles": [
      "./src/assets/semantic.scss",
      "./src/assets/themes/**"
    ]
  }
}
