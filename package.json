    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "resolve": "1.6.0",
    "semantic-ui-css": "^2.4.0",
    "semantic-ui-react": "^0.82.5",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "ts-jest": "22.0.1",
    "ts-loader": "^2.3.7",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.2.0",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "webpack-node-externals": "^1.7.2",
    "whatwg-fetch": "2.0.3",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@storybook/addon-actions": "^4.0.0-alpha.22",
    "@storybook/addon-knobs": "^4.0.0-alpha.22",
    "@storybook/addon-notes": "^4.0.0-alpha.22",
    "@storybook/addon-options": "^4.0.0-alpha.22",
    "@storybook/addons": "^4.0.0-alpha.22",
    "@storybook/core": "^4.0.0-alpha.22",
    "@storybook/react": "^4.0.0-alpha.22",
    "@types/cors": "^2.8.4",
    "@types/enzyme": "^3.1.0",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.115",
    "@types/node": "^8.10.0",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-knobs": "^3.4.1",
    "@types/storybook__addon-notes": "^3.3.3",
    "@types/storybook__addon-options": "^3.2.2",
    "@types/storybook__react": "^3.0.9",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "moment": "^2.22.0",
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "storybook-readme": "^4.0.0-beta1",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.3.1",
    "typescript": "^2.9.2"
  },
  "devEngines": {
    "node": "8.x || 9.x || 10.x"
  },
  "scripts": {
    "build": "npm-run-all build-scss build-ts",
    "build-scss": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "build-ts": "node scripts/build.js",
    "build-storybook": "yarn build-scss && build-storybook -c .storybook -o public/docs",
    "clean": "rm -rf ./build",
    "lint": "yarn lint-ts",
    "lint-ts": "tslint src/**/*.{ts,tsx}",
    "lint-ts-fix": "tslint src/**/*.{ts,tsx} --fix",
    "lint-scss": "stylelint src/**/*.scss --syntax scss",
    "lint-scss-fix": "stylelint src/**/*.scss --syntax scss --fix",
    "precommit": "lint-staged",
    "start": "npm-run-all -p start-scss start-ts",
    "start-scss": "yarn build-scss && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "node scripts/start.js",
    "start-storybook": "yarn build-scss && start-storybook -p 9001 -c .storybook",
    "start-react-client": "node scripts/client.js",
    "start-react-server": "node scripts/server.js",
    "start-ssr-fancy": "npm-run-all --parallel start-react-*",
    "start-ssr": "node build/client.js",
    "test": "node scripts/test.js --env=jsdom"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint src/**/*.{ts,tsx} --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint src/**/*.scss --syntax scss --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss",
    "ignoreFiles": [
      "./src/shared/assets/semantic.scss",
      "./src/shared/assets/semantic.css",
      "./src/shared/assets/themes/**"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
